                    }
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME_5}",
                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}",
                    "appName1": "${APPLICATION_NAME_5}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "Generic",
                        "generic" : {
                          "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
