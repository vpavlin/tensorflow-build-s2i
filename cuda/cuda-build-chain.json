                    },
                    "contextDir": "${S2I_PYTHON_VERSION}"
                },
                "strategy": {
                    "dockerStrategy": {
                      "noCache": true,
                      "dockerfilePath": "${S2I_PYTHON_DOCKER_FILE_PATH}",
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "cuda-${APPLICATION_NAME_5}:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME_6}:${APPLICATION_NAME_5}"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "4",
                        "memory": "4Gi"
                    },
                    "requests": {
                        "cpu": "4",
                        "memory": "4Gi"
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "The name of the application.",
            "value": "10.0-cuda-chain-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "APPLICATION_NAME_1",
            "description": "The name of the application 1.",
            "value": "10.0-base-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "APPLICATION_NAME_2",
            "description": "The name of the application 2.",
            "value": "10.0-runtime-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "APPLICATION_NAME_3",
            "description": "The name of the application 3.",
            "value": "10.0-cudnn7-runtime-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "APPLICATION_NAME_4",
            "description": "The name of the application 4.",
            "value": "10.0-devel-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "APPLICATION_NAME_5",
            "description": "The name of the application.",
            "value": "10.0-cudnn7-devel-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "APPLICATION_NAME_6",
            "description": "The name of the application.",
            "value": "python-36-rhel7",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY",
            "description": "Git repository for source.",
            "value": "https://github.com/sub-mod/cuda.git",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_BRANCH",
            "description": "Git repository branch for source.Stay fixed at ubi7 for now.",
            "value": "ubi7",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_CONTEXT_DIR",
            "description": "Git repository context dir for source.",
            "value": "10.0",
            "required": true
        },
        {
            "name": "S2I_IMAGE",
            "description": "submod/s2i-core-ubi7,registry.fedoraproject.org/f27/s2i-core, registry.fedoraproject.org/f28/s2i-core, registry.access.redhat.com/rhscl/s2i-core-rhel7, https://access.redhat.com/containers/?tab=overview#/registry.access.redhat.com/rhscl/s2i-base-rhel7",
            "value": "registry.access.redhat.com/rhscl/s2i-base-rhel7:1-79",
            "required": true
        },
        {
            "name": "DOCKER_FILE_PATH",
            "description": "Dockerfile.fedora27, Dockerfile.fedora28, Dockerfile.rhel75.",
            "value": "Dockerfile",
            "required": true
        },
        {
            "name": "S2I_PYTHON_VERSION",
            "description": "3.6",
            "value": "3.6",
            "required": true
        },
        {
            "name": "S2I_PYTHON_DOCKER_FILE_PATH",
            "description": "Dockerfile.fedora27, Dockerfile.fedora28, Dockerfile.rhel75.",
            "value": "Dockerfile.rhel7",
            "required": true
        }
    ]
}

