                    },
                    "contextDir": "${SOURCE_REPOSITORY_CONTEXT_DIR}/runtime/"
                },
                "strategy": {
                    "dockerStrategy": {
                      "noCache": true,
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "cuda-${APPLICATION_NAME_1}:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "cuda-${APPLICATION_NAME_2}:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "4",
                        "memory": "4Gi"
                    },
                    "requests": {
                        "cpu": "4",
                        "memory": "4Gi"
                    }
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME_3}",
