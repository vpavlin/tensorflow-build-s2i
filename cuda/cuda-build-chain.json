{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "cuda-build-chain",
        "annotations": {
            "description": "Template to build cuda images.",
            "tags": "cuda-build-chain"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "cuda-${APPLICATION_NAME_1}",
                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "cuda-${APPLICATION_NAME_2}",
                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "cuda-${APPLICATION_NAME_3}",
                "labels": {
                    "appTypes": "cuda-build-chain",
