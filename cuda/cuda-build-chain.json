                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME_6}",
                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME_1}",
                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}",
                    "appName1": "${APPLICATION_NAME_1}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "Generic",
                        "generic" : {
                          "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY}",
                        "ref": "${SOURCE_REPOSITORY_BRANCH}"
                    },
                    "contextDir": "${SOURCE_REPOSITORY_CONTEXT_DIR}/base"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                      "noCache": true,
                        "dockerfilePath": "${DOCKER_FILE_PATH}",
                        "from": {
                            "kind": "DockerImage",
                            "name": "${S2I_IMAGE}"
                        },
                        "env": [{
                                "name": "S2I_IMAGE",
                                "value": "${S2I_IMAGE}"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "cuda-${APPLICATION_NAME_1}:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "4",
                        "memory": "4Gi"
                    },
                    "requests": {
                        "cpu": "4",
                        "memory": "4Gi"
                    }
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME_2}",
                "labels": {
                    "appTypes": "cuda-build-chain",
                    "appName": "${APPLICATION_NAME}",
                    "appName1": "${APPLICATION_NAME_2}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "Generic",
                        "generic" : {
                          "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    }
                ],
                "source": {
                    "type": "Git",
